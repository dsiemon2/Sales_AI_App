# ===========================================
# Apex Sales Training AI - Environment Config
# ===========================================

# Application
NODE_ENV=development
PORT=3000
ADMIN_PORT=3001
PUBLIC_PORT=3002
APP_URL=http://localhost:3000
APP_NAME="Apex Sales Training AI"

# Database (PostgreSQL)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/apex_sales_ai?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"

# Session
SESSION_SECRET="your-super-secret-session-key-change-in-production"
SESSION_MAX_AGE=86400000

# Authentication
JWT_SECRET="your-jwt-secret-key-change-in-production"
JWT_EXPIRES_IN="7d"

# OAuth - Google
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
GOOGLE_CALLBACK_URL="http://localhost:3000/auth/google/callback"

# OAuth - Microsoft
MICROSOFT_CLIENT_ID=""
MICROSOFT_CLIENT_SECRET=""
MICROSOFT_CALLBACK_URL="http://localhost:3000/auth/microsoft/callback"

# Stripe
STRIPE_SECRET_KEY=""
STRIPE_PUBLISHABLE_KEY=""
STRIPE_WEBHOOK_SECRET=""

# Email (SMTP)
SMTP_HOST=""
SMTP_PORT=587
SMTP_USER=""
SMTP_PASS=""
SMTP_FROM="noreply@apexsalesai.com"

# OpenAI (for AI features)
OPENAI_API_KEY=""

# Logging
LOG_LEVEL=info

# Demo Mode
DEMO_MESSAGE_LIMIT=10
DEMO_ENABLED=true

# Admin
ADMIN_TOKEN="admin"
SUPER_ADMIN_EMAIL="admin@apexsalesai.com"
SUPER_ADMIN_PASSWORD="Admin123!"
