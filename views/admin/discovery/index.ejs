<%- include('../../layouts/admin', { body: `

<div class="container-fluid py-4">
  <!-- Header -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h1 class="h3 mb-0"><i class="bi bi-question-circle me-2"></i>Discovery Questions</h1>
      <p class="text-muted mb-0">Manage questions to uncover customer needs</p>
    </div>
    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addQuestionModal">
      <i class="bi bi-plus-lg me-1"></i> Add Question
    </button>
  </div>

  <!-- Filters -->
  <div class="card mb-4">
    <div class="card-body">
      <form method="GET" class="row g-3">
        <input type="hidden" name="token" value="${token || ''}">
        ${isSuperAdmin ? '<div class="col-md-2"><label class="form-label">Industry</label><select name="industryId" id="industryFilter" class="form-select" onchange="onIndustryChange()"><option value="">All Industries</option></select></div><div class="col-md-3"><label class="form-label">Company</label><select name="companyId" id="companyFilter" class="form-select"><option value="">All Companies</option></select></div>' : ''}
        <div class="${isSuperAdmin ? 'col-md-2' : 'col-md-4'}">
          <label class="form-label">Phase</label>
          <select name="phase" class="form-select">
            <option value="">All Phases</option>
            ${phases.map(p => `
              <option value="${p}" ${filters.phase === p ? 'selected' : ''}>${p}</option>
            `).join('')}
          </select>
        </div>
        <div class="${isSuperAdmin ? 'col-md-2' : 'col-md-4'}">
          <label class="form-label">Target Need</label>
          <select name="targetNeed" class="form-select">
            <option value="">All Needs</option>
            ${targetNeeds.map(n => `
              <option value="${n}" ${filters.targetNeed === n ? 'selected' : ''}>${n}</option>
            `).join('')}
          </select>
        </div>
        <div class="${isSuperAdmin ? 'col-md-3' : 'col-md-4'} d-flex align-items-end">
          <button type="submit" class="btn btn-primary me-2"><i class="bi bi-funnel me-1"></i> Filter</button>
          <a href="${basePath}/admin/discovery?token=${token || ''}" class="btn btn-outline-secondary">Clear</a>
        </div>
      </form>
    </div>
  </div>

  <!-- Questions List -->
  <div class="card">
    <div class="card-body p-0">
      <div class="list-group list-group-flush">
        ${questions.length === 0 ? `
          <div class="list-group-item text-center py-5 text-muted">
            <i class="bi bi-question-circle fs-1 d-block mb-2"></i>
            No discovery questions found. Add your first question to get started.
          </div>
        ` : questions.map((q, index) => `
          <div class="list-group-item" data-id="${q.id}">
            <div class="d-flex justify-content-between align-items-start">
              <div class="flex-grow-1">
                <div class="d-flex align-items-center mb-2">
                  <span class="badge bg-secondary me-2">${index + 1}</span>
                  <span class="badge bg-primary me-2">${q.phase}</span>
                  ${q.targetNeed ? `<span class="badge bg-info">${q.targetNeed}</span>` : ''}
                </div>
                <h6 class="mb-1">${q.question}</h6>
                ${q.purpose ? `<small class="text-muted"><strong>Purpose:</strong> ${q.purpose}</small>` : ''}
                ${q.followUpQuestions && q.followUpQuestions.length > 0 ? `
                  <div class="mt-2">
                    <small class="text-muted"><strong>Follow-ups:</strong></small>
                    <ul class="small mb-0 ps-3">
                      ${q.followUpQuestions.slice(0, 2).map(f => `<li>${f}</li>`).join('')}
                      ${q.followUpQuestions.length > 2 ? `<li class="text-muted">+${q.followUpQuestions.length - 2} more</li>` : ''}
                    </ul>
                  </div>
                ` : ''}
              </div>
              <div class="ms-3">
                <span class="badge ${q.isActive ? 'bg-success' : 'bg-secondary'} me-2">
                  ${q.isActive ? 'Active' : 'Inactive'}
                </span>
                <button class="btn btn-sm btn-outline-secondary" onclick="editQuestion('${q.id}')"
                        data-bs-toggle="tooltip" title="Edit question">
                  <i class="bi bi-pencil"></i>
                </button>
                <button class="btn btn-sm btn-outline-danger" onclick="deleteQuestion('${q.id}')"
                        data-bs-toggle="tooltip" title="Delete question">
                  <i class="bi bi-trash"></i>
                </button>
              </div>
            </div>
          </div>
        `).join('')}
      </div>
    </div>
  </div>
</div>

<!-- Add Question Modal -->
<div class="modal fade" id="addQuestionModal" tabindex="-1">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"><i class="bi bi-plus-lg me-2"></i>Add Discovery Question</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <form id="addQuestionForm">
        <div class="modal-body">
          <div class="row g-3">
            <div class="col-12">
              <label class="form-label">Question *</label>
              <textarea name="question" class="form-control" rows="2" required placeholder="What question should be asked?"></textarea>
            </div>
            <div class="col-12">
              <label class="form-label">Purpose</label>
              <input type="text" name="purpose" class="form-control" placeholder="What does this question reveal?">
            </div>
            <div class="col-md-6">
              <label class="form-label">Phase</label>
              <select name="phase" class="form-control">
                <option value="discovery">Discovery</option>
                <option value="qualification">Qualification</option>
                <option value="deep_dive">Deep Dive</option>
                <option value="closing">Closing</option>
              </select>
            </div>
            <div class="col-md-6">
              <label class="form-label">Target Need</label>
              <input type="text" name="targetNeed" class="form-control" placeholder="e.g., budget, timeline, authority">
            </div>
            <div class="col-12">
              <label class="form-label">Follow-up Questions (one per line)</label>
              <textarea name="followUpQuestions" class="form-control" rows="3" placeholder="Follow-up 1&#10;Follow-up 2"></textarea>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-primary"><i class="bi bi-check-lg me-1"></i> Create</button>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- Edit Question Modal -->
<div class="modal fade" id="editQuestionModal" tabindex="-1">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"><i class="bi bi-pencil me-2"></i>Edit Question</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <form id="editQuestionForm">
        <input type="hidden" name="id" id="editQuestionId">
        <div class="modal-body">
          <div class="row g-3">
            <div class="col-12">
              <label class="form-label">Question *</label>
              <textarea name="question" id="editQuestionText" class="form-control" rows="2" required></textarea>
            </div>
            <div class="col-12">
              <label class="form-label">Purpose</label>
              <input type="text" name="purpose" id="editPurpose" class="form-control">
            </div>
            <div class="col-md-6">
              <label class="form-label">Phase</label>
              <select name="phase" id="editPhase" class="form-control">
                <option value="discovery">Discovery</option>
                <option value="qualification">Qualification</option>
                <option value="deep_dive">Deep Dive</option>
                <option value="closing">Closing</option>
              </select>
            </div>
            <div class="col-md-6">
              <label class="form-label">Target Need</label>
              <input type="text" name="targetNeed" id="editTargetNeed" class="form-control">
            </div>
            <div class="col-12">
              <label class="form-label">Follow-up Questions (one per line)</label>
              <textarea name="followUpQuestions" id="editFollowUpQuestions" class="form-control" rows="3"></textarea>
            </div>
            <div class="col-12">
              <div class="form-check">
                <input type="checkbox" name="isActive" class="form-check-input" id="editIsActive">
                <label class="form-check-label" for="editIsActive">Active</label>
              </div>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-primary"><i class="bi bi-check-lg me-1"></i> Save</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script>
  const questions = ${JSON.stringify(questions)};
  const basePath = '${basePath}';
  const industries = ${JSON.stringify(industries)};
  const companies = ${JSON.stringify(companies)};
  const filters = ${JSON.stringify(filters)};
  const isSuperAdmin = ${isSuperAdmin};

  // Initialize filter dropdowns for SUPER_ADMIN
  function initFilters() {
    if (!isSuperAdmin) return;

    const industrySelect = document.getElementById('industryFilter');
    const companySelect = document.getElementById('companyFilter');

    // Populate industries
    industries.forEach(ind => {
      const opt = document.createElement('option');
      opt.value = ind.id;
      opt.textContent = ind.name;
      if (filters.industryId === ind.id) opt.selected = true;
      industrySelect.appendChild(opt);
    });

    // Populate companies
    updateCompanyDropdown();
  }

  function updateCompanyDropdown() {
    const industrySelect = document.getElementById('industryFilter');
    const companySelect = document.getElementById('companyFilter');
    const selectedIndustry = industrySelect ? industrySelect.value : '';

    companySelect.innerHTML = '<option value="">All Companies</option>';

    const filteredCompanies = selectedIndustry
      ? companies.filter(c => c.industryId === selectedIndustry)
      : companies;

    filteredCompanies.forEach(comp => {
      const opt = document.createElement('option');
      opt.value = comp.id;
      opt.textContent = comp.name + (comp.industry ? ' (' + comp.industry.name + ')' : '');
      if (filters.companyId === comp.id) opt.selected = true;
      companySelect.appendChild(opt);
    });
  }

  function onIndustryChange() {
    updateCompanyDropdown();
  }

  function editQuestion(id) {
    const q = questions.find(x => x.id === id);
    if (!q) return;

    document.getElementById('editQuestionId').value = q.id;
    document.getElementById('editQuestionText').value = q.question || '';
    document.getElementById('editPurpose').value = q.purpose || '';
    document.getElementById('editPhase').value = q.phase || 'discovery';
    document.getElementById('editTargetNeed').value = q.targetNeed || '';
    document.getElementById('editFollowUpQuestions').value = (q.followUpQuestions || []).join('\\n');
    document.getElementById('editIsActive').checked = q.isActive;

    new bootstrap.Modal(document.getElementById('editQuestionModal')).show();
  }

  document.getElementById('addQuestionForm').addEventListener('submit', async (e) => {
    e.preventDefault();
    const data = Object.fromEntries(new FormData(e.target));
    try {
      const res = await fetch(basePath + '/admin/discovery', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(data)
      });
      if (res.ok) location.reload();
      else alert((await res.json()).error || 'Failed to create question');
    } catch (err) {
      alert('Error creating question');
    }
  });

  document.getElementById('editQuestionForm').addEventListener('submit', async (e) => {
    e.preventDefault();
    const form = e.target;
    const id = document.getElementById('editQuestionId').value;
    const data = Object.fromEntries(new FormData(form));
    data.isActive = form.isActive.checked;

    try {
      const res = await fetch(basePath + '/admin/discovery/' + id, {
        method: 'PUT',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(data)
      });
      if (res.ok) location.reload();
      else alert((await res.json()).error || 'Failed to update question');
    } catch (err) {
      alert('Error updating question');
    }
  });

  async function deleteQuestion(id) {
    if (!confirm('Are you sure you want to delete this question?')) return;
    try {
      const res = await fetch(basePath + '/admin/discovery/' + id, { method: 'DELETE' });
      if (res.ok) location.reload();
      else alert((await res.json()).error || 'Failed to delete question');
    } catch (err) {
      alert('Error deleting question');
    }
  }

  document.addEventListener('DOMContentLoaded', () => {
    initFilters();
    document.querySelectorAll('[data-bs-toggle="tooltip"]').forEach(el => new bootstrap.Tooltip(el));
  });
</script>

` }) %>
