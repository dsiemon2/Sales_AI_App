<%- include('../../layouts/admin', { body: `

<div class="container-fluid py-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h1 class="h3 mb-0"><i class="bi bi-people me-2"></i>AI Agents</h1>
      <p class="text-muted mb-0">Configure AI personas and agents for sales training</p>
    </div>
    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addAgentModal">
      <i class="bi bi-plus-lg me-1"></i> Add Agent
    </button>
  </div>

  <!-- Filters (SUPER_ADMIN only) -->
  ${isSuperAdmin ? '<div class="card mb-4"><div class="card-body"><form method="GET" id="filterForm" class="row g-3"><input type="hidden" name="token" value="' + (token || '') + '"><div class="col-md-3"><label class="form-label">Industry</label><select name="industryId" id="industryFilter" class="form-select" onchange="onIndustryChange()"><option value="">All Industries</option></select></div><div class="col-md-3"><label class="form-label">Company</label><select name="companyId" id="companyFilter" class="form-select"><option value="">All Companies</option></select></div><div class="col-md-3 d-flex align-items-end"><button type="submit" class="btn btn-primary me-2"><i class="bi bi-funnel me-1"></i> Filter</button><a href="' + basePath + '/admin/ai-agents?token=' + (token || '') + '" class="btn btn-outline-secondary">Clear</a></div></form></div></div>' : ''}

  <!-- Stats Cards -->
  <div class="row g-3 mb-4">
    <div class="col-md-3">
      <div class="card bg-primary text-white">
        <div class="card-body">
          <div class="d-flex align-items-center">
            <i class="bi bi-people fs-2 me-3"></i>
            <div>
              <div class="h4 mb-0" id="totalAgents">0</div>
              <small>Total Agents</small>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card bg-success text-white">
        <div class="card-body">
          <div class="d-flex align-items-center">
            <i class="bi bi-check-circle fs-2 me-3"></i>
            <div>
              <div class="h4 mb-0" id="activeAgents">0</div>
              <small>Active</small>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card bg-info text-white">
        <div class="card-body">
          <div class="d-flex align-items-center">
            <i class="bi bi-person-badge fs-2 me-3"></i>
            <div>
              <div class="h4 mb-0" id="customerPersonas">0</div>
              <small>Customer Personas</small>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card bg-warning text-dark">
        <div class="card-body">
          <div class="d-flex align-items-center">
            <i class="bi bi-mortarboard fs-2 me-3"></i>
            <div>
              <div class="h4 mb-0" id="coachAgents">0</div>
              <small>Coaches/Trainers</small>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Agents Grid -->
  <div class="row g-4" id="agentsContainer"></div>
</div>

<!-- Add Agent Modal -->
<div class="modal fade" id="addAgentModal" tabindex="-1">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"><i class="bi bi-plus-lg me-2"></i>Add AI Agent</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <form id="addAgentForm">
          <div class="row g-3">
            <div class="col-md-6">
              <label class="form-label">Agent Name</label>
              <input type="text" name="name" class="form-control" required placeholder="e.g., Sales Coach">
            </div>
            <div class="col-md-6">
              <label class="form-label">Agent Type</label>
              <select name="type" class="form-select">
                <option value="sales">Sales Agent</option>
                <option value="customer">Customer Persona</option>
                <option value="coach">Coach/Trainer</option>
                <option value="objection">Objection Handler</option>
              </select>
            </div>
            <div class="col-12">
              <label class="form-label">Description</label>
              <textarea name="description" class="form-control" rows="2"></textarea>
            </div>
            <div class="col-12">
              <label class="form-label">Persona Instructions</label>
              <textarea name="persona" class="form-control" rows="4" placeholder="Define the agent's personality and behavior..."></textarea>
            </div>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" form="addAgentForm" class="btn btn-primary">
          <i class="bi bi-plus-lg me-1"></i> Add Agent
        </button>
      </div>
    </div>
  </div>
</div>

<!-- Edit Agent Modal -->
<div class="modal fade" id="editAgentModal" tabindex="-1">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"><i class="bi bi-pencil me-2"></i>Edit AI Agent</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <form id="editAgentForm">
          <input type="hidden" name="id" id="editAgentId">
          <div class="row g-3">
            <div class="col-md-6">
              <label class="form-label">Agent Name</label>
              <input type="text" name="name" id="editAgentName" class="form-control" required>
            </div>
            <div class="col-md-6">
              <label class="form-label">Agent Type</label>
              <select name="type" id="editAgentType" class="form-select">
                <option value="sales">Sales Agent</option>
                <option value="customer">Customer Persona</option>
                <option value="coach">Coach/Trainer</option>
                <option value="objection">Objection Handler</option>
              </select>
            </div>
            <div class="col-md-6">
              <label class="form-label">Status</label>
              <select name="isActive" id="editAgentActive" class="form-select">
                <option value="true">Active</option>
                <option value="false">Inactive</option>
              </select>
            </div>
            <div class="col-12">
              <label class="form-label">Description</label>
              <textarea name="description" id="editAgentDescription" class="form-control" rows="2"></textarea>
            </div>
            <div class="col-12">
              <label class="form-label">Persona Instructions</label>
              <textarea name="persona" id="editAgentPersona" class="form-control" rows="4"></textarea>
            </div>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" form="editAgentForm" class="btn btn-primary">
          <i class="bi bi-check-lg me-1"></i> Save Changes
        </button>
      </div>
    </div>
  </div>
</div>

<script>
  const basePath = '${basePath}';
  const token = '${token || ''}';
  const agents = ${JSON.stringify(agents)};
  const industries = ${JSON.stringify(industries)};
  const companies = ${JSON.stringify(companies)};
  const filters = ${JSON.stringify(filters)};
  const isSuperAdmin = ${isSuperAdmin};

  function getAgentTypeIcon(type) {
    switch (type) {
      case 'customer': return 'bi-person-badge';
      case 'coach': return 'bi-mortarboard';
      case 'objection': return 'bi-shield-exclamation';
      default: return 'bi-robot';
    }
  }

  function getAgentTypeColor(type) {
    switch (type) {
      case 'customer': return 'bg-info';
      case 'coach': return 'bg-warning';
      case 'objection': return 'bg-danger';
      default: return 'bg-primary';
    }
  }

  function getAgentTypeLabel(type) {
    switch (type) {
      case 'customer': return 'Customer Persona';
      case 'coach': return 'Coach/Trainer';
      case 'objection': return 'Objection Handler';
      default: return 'Sales Agent';
    }
  }

  function renderAgents() {
    const container = document.getElementById('agentsContainer');

    // Update stats
    document.getElementById('totalAgents').textContent = agents.length;
    document.getElementById('activeAgents').textContent = agents.filter(a => a.isActive).length;
    document.getElementById('customerPersonas').textContent = agents.filter(a => a.type === 'customer').length;
    document.getElementById('coachAgents').textContent = agents.filter(a => a.type === 'coach').length;

    if (agents.length === 0) {
      container.innerHTML = '<div class="col-12"><div class="card"><div class="card-body text-center py-5 text-muted"><i class="bi bi-people fs-1 d-block mb-2"></i>No AI agents configured yet.<br><small>Add agents to create different AI personas for training.</small></div></div></div>';
      return;
    }

    let html = '';
    agents.forEach(agent => {
      const typeIcon = getAgentTypeIcon(agent.type);
      const typeColor = getAgentTypeColor(agent.type);
      const typeLabel = getAgentTypeLabel(agent.type);
      const companyName = agent.company ? agent.company.name : 'Unknown';
      const industryName = agent.company && agent.company.industry ? agent.company.industry.name : '';

      html += '<div class="col-md-6 col-lg-4">';
      html += '<div class="card h-100">';
      html += '<div class="card-body">';

      // Header with icon and name
      html += '<div class="d-flex align-items-center mb-3">';
      html += '<div class="rounded-circle ' + typeColor + ' bg-opacity-10 d-flex align-items-center justify-content-center me-3" style="width:48px;height:48px">';
      html += '<i class="bi ' + typeIcon + ' ' + typeColor.replace('bg-', 'text-') + '"></i>';
      html += '</div>';
      html += '<div class="flex-grow-1">';
      html += '<h5 class="mb-0">' + agent.name + '</h5>';
      html += '<small class="text-muted">' + typeLabel + '</small>';
      html += '</div>';
      html += '</div>';

      // Company info (for SUPER_ADMIN)
      if (isSuperAdmin) {
        html += '<div class="mb-2 small">';
        html += '<i class="bi bi-building me-1 text-muted"></i>';
        html += '<span class="text-muted">' + companyName + '</span>';
        if (industryName) {
          html += '<span class="badge bg-light text-dark ms-2">' + industryName + '</span>';
        }
        html += '</div>';
      }

      // Description
      html += '<p class="text-muted small mb-3">' + (agent.description || 'No description') + '</p>';

      // Footer with status and actions
      html += '<div class="d-flex justify-content-between align-items-center">';
      html += '<span class="badge ' + (agent.isActive ? 'bg-success' : 'bg-secondary') + '">' + (agent.isActive ? 'Active' : 'Inactive') + '</span>';
      html += '<div>';
      html += '<button class="btn btn-sm btn-outline-secondary me-1" onclick="editAgent(\\'' + agent.id + '\\')" data-bs-toggle="tooltip" title="Edit agent"><i class="bi bi-pencil"></i></button>';
      html += '<button class="btn btn-sm btn-outline-danger" onclick="deleteAgent(\\'' + agent.id + '\\')" data-bs-toggle="tooltip" title="Delete agent"><i class="bi bi-trash"></i></button>';
      html += '</div>';
      html += '</div>';

      html += '</div>';
      html += '</div>';
      html += '</div>';
    });

    container.innerHTML = html;
    initTooltips();
  }

  function populateDropdowns() {
    if (!isSuperAdmin) return;

    const industrySelect = document.getElementById('industryFilter');
    if (industrySelect) {
      industries.forEach(ind => {
        const option = document.createElement('option');
        option.value = ind.id;
        option.textContent = ind.name;
        if (filters.industryId === ind.id) option.selected = true;
        industrySelect.appendChild(option);
      });
    }

    const companySelect = document.getElementById('companyFilter');
    if (companySelect) {
      companies.forEach(comp => {
        const option = document.createElement('option');
        option.value = comp.id;
        option.textContent = comp.name + (comp.industry ? ' (' + comp.industry.name + ')' : '');
        if (filters.companyId === comp.id) option.selected = true;
        companySelect.appendChild(option);
      });
    }
  }

  function onIndustryChange() {
    const industryId = document.getElementById('industryFilter').value;
    const companySelect = document.getElementById('companyFilter');

    companySelect.innerHTML = '<option value="">All Companies</option>';

    const filteredCompanies = industryId
      ? companies.filter(c => c.industryId === industryId)
      : companies;

    filteredCompanies.forEach(comp => {
      const option = document.createElement('option');
      option.value = comp.id;
      option.textContent = comp.name;
      companySelect.appendChild(option);
    });
  }

  function editAgent(id) {
    const agent = agents.find(a => a.id === id);
    if (!agent) return;

    document.getElementById('editAgentId').value = agent.id;
    document.getElementById('editAgentName').value = agent.name;
    document.getElementById('editAgentType').value = agent.type || 'sales';
    document.getElementById('editAgentActive').value = agent.isActive ? 'true' : 'false';
    document.getElementById('editAgentDescription').value = agent.description || '';
    document.getElementById('editAgentPersona').value = agent.persona || '';

    const modal = new bootstrap.Modal(document.getElementById('editAgentModal'));
    modal.show();
  }

  async function deleteAgent(id) {
    if (!confirm('Are you sure you want to delete this agent?')) return;

    try {
      const res = await fetch(basePath + '/api/v1/ai-agents/' + id + '?token=' + token, { method: 'DELETE' });
      if (res.ok) {
        location.reload();
      } else {
        const data = await res.json();
        alert(data.error || 'Failed to delete agent');
      }
    } catch (err) {
      alert('Error deleting agent');
    }
  }

  function initTooltips() {
    document.querySelectorAll('[data-bs-toggle="tooltip"]').forEach(el => {
      new bootstrap.Tooltip(el);
    });
  }

  document.addEventListener('DOMContentLoaded', () => {
    populateDropdowns();
    renderAgents();
    initTooltips();
  });
</script>

` }) %>
