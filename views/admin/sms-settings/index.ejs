<%- include('../../layouts/admin', { body: `

<div class="container-fluid py-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h1 class="h3 mb-0"><i class="bi bi-chat-dots me-2"></i>SMS Settings</h1>
      <p class="text-muted mb-0">Configure SMS notifications and automated messaging</p>
    </div>
  </div>

  ${typeof envConfigured !== 'undefined' && envConfigured ? '<div class="alert alert-info"><i class="bi bi-info-circle me-2"></i>Twilio is configured via environment variables. Company-specific settings below will override the defaults.</div>' : ''}

  <div class="row g-4">
    <div class="col-lg-8">
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0"><i class="bi bi-gear me-2"></i>Provider Configuration</h5>
        </div>
        <div class="card-body">
          <form id="smsForm">
            <div class="row g-3">
              <div class="col-md-6">
                <label class="form-label">SMS Provider</label>
                <select name="provider" id="provider" class="form-select">
                  <option value="twilio" ${smsSettings?.provider === 'twilio' || !smsSettings?.provider ? 'selected' : ''}>Twilio</option>
                  <option value="vonage" ${smsSettings?.provider === 'vonage' ? 'selected' : ''}>Vonage</option>
                  <option value="messagebird" ${smsSettings?.provider === 'messagebird' ? 'selected' : ''}>MessageBird</option>
                </select>
              </div>
              <div class="col-md-6">
                <label class="form-label">From Number <span class="text-danger">*</span></label>
                <input type="text" name="fromNumber" id="fromNumber" class="form-control"
                  placeholder="+1234567890" value="${smsSettings?.fromNumber || ''}">
                <small class="text-muted">The phone number messages will be sent from.</small>
              </div>
              <div class="col-md-6">
                <label class="form-label">Account SID <span class="text-danger">*</span></label>
                <input type="text" name="accountSid" id="accountSid" class="form-control"
                  placeholder="ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx" value="${smsSettings?.accountSid || ''}">
              </div>
              <div class="col-md-6">
                <label class="form-label">Auth Token <span class="text-danger">*</span></label>
                <input type="password" name="authToken" id="authToken" class="form-control"
                  placeholder="Enter auth token" value="${smsSettings?.authToken || ''}">
              </div>
            </div>

            <hr class="my-4">

            <h6 class="mb-3"><i class="bi bi-chat-text me-2"></i>Message Templates</h6>
            <p class="text-muted small">Use placeholders: {{firstName}}, {{companyName}}, {{duration}}, {{score}}</p>

            <div class="row g-3">
              <div class="col-12">
                <label class="form-label">Welcome Message</label>
                <div class="input-group">
                  <div class="input-group-text">
                    <div class="form-check form-switch mb-0">
                      <input class="form-check-input" type="checkbox" id="autoWelcome" name="autoWelcome"
                        ${smsSettings?.autoWelcome ? 'checked' : ''}>
                    </div>
                  </div>
                  <textarea name="welcomeTemplate" id="welcomeTemplate" class="form-control" rows="2"
                    placeholder="Hi {{firstName}}! Welcome to your sales training session.">${smsSettings?.welcomeTemplate || ''}</textarea>
                </div>
                <small class="text-muted">Sent when a user starts a training session.</small>
              </div>

              <div class="col-12">
                <label class="form-label">Completion Message</label>
                <div class="input-group">
                  <div class="input-group-text">
                    <div class="form-check form-switch mb-0">
                      <input class="form-check-input" type="checkbox" id="autoComplete" name="autoComplete"
                        ${smsSettings?.autoComplete ? 'checked' : ''}>
                    </div>
                  </div>
                  <textarea name="completeTemplate" id="completeTemplate" class="form-control" rows="2"
                    placeholder="Great job {{firstName}}! You completed a {{duration}} minute training session.">${smsSettings?.completeTemplate || ''}</textarea>
                </div>
                <small class="text-muted">Sent when a user finishes a training session.</small>
              </div>

              <div class="col-12">
                <label class="form-label">Follow-up Message</label>
                <div class="input-group">
                  <div class="input-group-text">
                    <div class="form-check form-switch mb-0">
                      <input class="form-check-input" type="checkbox" id="autoFollowup" name="autoFollowup"
                        ${smsSettings?.autoFollowup ? 'checked' : ''}>
                    </div>
                  </div>
                  <textarea name="followupTemplate" id="followupTemplate" class="form-control" rows="2"
                    placeholder="Hi {{firstName}}! It's been a while since your last training. Ready for another session?">${smsSettings?.followupTemplate || ''}</textarea>
                </div>
                <small class="text-muted">Sent as a reminder to inactive users.</small>
              </div>
            </div>

            <hr class="my-4">

            <div class="d-flex justify-content-between">
              <button type="submit" class="btn btn-primary">
                <i class="bi bi-save me-1"></i> Save Settings
              </button>
              <button type="button" class="btn btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#testModal">
                <i class="bi bi-send me-1"></i> Send Test SMS
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <div class="col-lg-4">
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0"><i class="bi bi-lightbulb me-2"></i>Tips</h5>
        </div>
        <div class="card-body">
          <h6 class="text-primary">Getting Started:</h6>
          <ol class="small text-muted">
            <li>Sign up for Twilio at <a href="https://twilio.com" target="_blank">twilio.com</a></li>
            <li>Get your Account SID and Auth Token from the console</li>
            <li>Purchase or verify a phone number</li>
            <li>Enter your credentials here</li>
          </ol>

          <h6 class="text-primary mt-3">Template Variables:</h6>
          <ul class="small text-muted mb-0">
            <li><code>{{firstName}}</code> - User's first name</li>
            <li><code>{{companyName}}</code> - Your company name</li>
            <li><code>{{duration}}</code> - Session duration (minutes)</li>
            <li><code>{{score}}</code> - Session score</li>
          </ul>
        </div>
      </div>

      <div class="card mt-3">
        <div class="card-header">
          <h5 class="mb-0"><i class="bi bi-shield-check me-2"></i>Status</h5>
        </div>
        <div class="card-body">
          <div class="d-flex align-items-center mb-2">
            <span class="badge ${(smsSettings?.accountSid && smsSettings?.authToken) || (typeof envConfigured !== 'undefined' && envConfigured) ? 'bg-success' : 'bg-warning'} me-2">
              ${(smsSettings?.accountSid && smsSettings?.authToken) || (typeof envConfigured !== 'undefined' && envConfigured) ? 'Configured' : 'Not Configured'}
            </span>
            <span class="small text-muted">Provider credentials</span>
          </div>
          <div class="d-flex align-items-center mb-2">
            <span class="badge ${smsSettings?.autoWelcome ? 'bg-success' : 'bg-secondary'} me-2">
              ${smsSettings?.autoWelcome ? 'Enabled' : 'Disabled'}
            </span>
            <span class="small text-muted">Welcome SMS</span>
          </div>
          <div class="d-flex align-items-center mb-2">
            <span class="badge ${smsSettings?.autoComplete ? 'bg-success' : 'bg-secondary'} me-2">
              ${smsSettings?.autoComplete ? 'Enabled' : 'Disabled'}
            </span>
            <span class="small text-muted">Completion SMS</span>
          </div>
          <div class="d-flex align-items-center">
            <span class="badge ${smsSettings?.autoFollowup ? 'bg-success' : 'bg-secondary'} me-2">
              ${smsSettings?.autoFollowup ? 'Enabled' : 'Disabled'}
            </span>
            <span class="small text-muted">Follow-up SMS</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Test SMS Modal -->
<div class="modal fade" id="testModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"><i class="bi bi-send me-2"></i>Send Test SMS</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <div class="mb-3">
          <label class="form-label">Test Phone Number</label>
          <input type="tel" id="testNumber" class="form-control" placeholder="+1234567890">
          <small class="text-muted">Enter the phone number to receive the test message.</small>
        </div>
        <div id="testResult" class="d-none">
          <div class="alert" id="testAlert"></div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary" id="sendTestBtn" onclick="sendTestSms()">
          <i class="bi bi-send me-1"></i> Send Test
        </button>
      </div>
    </div>
  </div>
</div>

<script>
const basePath = '${basePath}';

document.getElementById('smsForm').addEventListener('submit', async (e) => {
  e.preventDefault();

  const data = {
    provider: document.getElementById('provider').value,
    fromNumber: document.getElementById('fromNumber').value,
    accountSid: document.getElementById('accountSid').value,
    authToken: document.getElementById('authToken').value,
    welcomeTemplate: document.getElementById('welcomeTemplate').value,
    completeTemplate: document.getElementById('completeTemplate').value,
    followupTemplate: document.getElementById('followupTemplate').value,
    autoWelcome: document.getElementById('autoWelcome').checked,
    autoComplete: document.getElementById('autoComplete').checked,
    autoFollowup: document.getElementById('autoFollowup').checked
  };

  try {
    const response = await fetch(basePath + '/admin/sms-settings', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify(data)
    });

    if (!response.ok) {
      const result = await response.json();
      throw new Error(result.error || 'Failed to save');
    }

    alert('Settings saved successfully!');
    window.location.reload();
  } catch (error) {
    alert('Error: ' + error.message);
  }
});

async function sendTestSms() {
  const testNumber = document.getElementById('testNumber').value;
  if (!testNumber) {
    alert('Please enter a phone number');
    return;
  }

  const btn = document.getElementById('sendTestBtn');
  btn.disabled = true;
  btn.innerHTML = '<i class="bi bi-hourglass-split me-1"></i> Sending...';

  const resultDiv = document.getElementById('testResult');
  const alertDiv = document.getElementById('testAlert');

  try {
    const response = await fetch(basePath + '/admin/sms-settings/test', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ testNumber })
    });

    const result = await response.json();

    resultDiv.classList.remove('d-none');
    if (result.success) {
      alertDiv.className = 'alert alert-success';
      alertDiv.innerHTML = '<i class="bi bi-check-circle me-2"></i>Test SMS sent successfully! Message ID: ' + result.messageId;
    } else {
      alertDiv.className = 'alert alert-danger';
      alertDiv.innerHTML = '<i class="bi bi-x-circle me-2"></i>Failed to send: ' + (result.error || 'Unknown error');
    }
  } catch (error) {
    resultDiv.classList.remove('d-none');
    alertDiv.className = 'alert alert-danger';
    alertDiv.innerHTML = '<i class="bi bi-x-circle me-2"></i>Error: ' + error.message;
  } finally {
    btn.disabled = false;
    btn.innerHTML = '<i class="bi bi-send me-1"></i> Send Test';
  }
}
</script>

` }) %>
