<%- include('../../layouts/admin', { body: `

<div class="container-fluid py-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h1 class="h3 mb-0"><i class="bi bi-building me-2"></i>Companies</h1>
      <p class="text-muted mb-0">Manage tenant companies</p>
    </div>
    <button class="btn btn-primary">
      <i class="bi bi-plus-lg me-1"></i> Add Company
    </button>
  </div>

  <div class="card">
    <div class="card-body p-0">
      <div class="table-responsive">
        <table class="table table-hover mb-0">
          <thead class="table-light">
            <tr>
              <th>Company</th>
              <th>Industry</th>
              <th>Users</th>
              <th>Status</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            ${typeof companies !== 'undefined' && companies.length > 0
              ? companies.map(c => '<tr><td><div class="fw-semibold">' + c.name + '</div><small class="text-muted">' + (c.slug || '') + '</small></td><td><span class="badge bg-secondary">' + (c.industry?.name || 'N/A') + '</span></td><td>' + (c._count?.users || 0) + '</td><td><span class="badge ' + (c.isActive !== false ? 'bg-success' : 'bg-secondary') + '">' + (c.isActive !== false ? 'Active' : 'Inactive') + '</span></td><td><button class="btn btn-sm btn-outline-primary me-1"><i class="bi bi-eye"></i></button><button class="btn btn-sm btn-outline-secondary me-1"><i class="bi bi-pencil"></i></button><button class="btn btn-sm btn-outline-danger"><i class="bi bi-trash"></i></button></td></tr>').join('')
              : '<tr><td colspan="5" class="text-center py-4 text-muted">No companies found</td></tr>'}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

` }) %>
