<%- include('../../layouts/admin', { body: `

<style>
  .obj-category-price { background: linear-gradient(135deg, #dc3545, #bb2d3b); color: white; }
  .obj-category-need { background: linear-gradient(135deg, #0d6efd, #0a58ca); color: white; }
  .obj-category-timing { background: linear-gradient(135deg, #0dcaf0, #0aa2c0); color: white; }
  .obj-category-authority { background: linear-gradient(135deg, #6f42c1, #5a32a3); color: white; }
  .obj-category-trust { background: linear-gradient(135deg, #fd7e14, #e66000); color: white; }
  .obj-category-competition { background: linear-gradient(135deg, #20c997, #1aa179); color: white; }
  .obj-category-technology { background: linear-gradient(135deg, #6610f2, #520dc2); color: white; }
  .obj-category-budget { background: linear-gradient(135deg, #ffc107, #e0a800); color: #212529; }
  .obj-category-scope { background: linear-gradient(135deg, #198754, #157347); color: white; }
  .obj-category-retail { background: linear-gradient(135deg, #d63384, #ab296a); color: white; }
  .obj-category-commitment { background: linear-gradient(135deg, #495057, #343a40); color: white; }
  .obj-category-alternative { background: linear-gradient(135deg, #6c757d, #5c636a); color: white; }
  .obj-category-general { background: linear-gradient(135deg, #6c757d, #5c636a); color: white; }
  .objection-text { color: #dc3545; font-weight: 500; }
  .objection-item { border-bottom: 1px solid #e9ecef; padding-bottom: 1rem; margin-bottom: 1rem; }
  .objection-item:last-child { border-bottom: none; margin-bottom: 0; padding-bottom: 0; }
</style>

<div class="container-fluid py-4">
  <!-- Header -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h1 class="h3 mb-0"><i class="bi bi-shield-exclamation text-primary me-2"></i>Objection Handlers</h1>
      <p class="text-muted mb-0">When customers object, the AI uses these responses. Good objection handling turns "no" into "tell me more."</p>
    </div>
    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addObjectionModal">
      <i class="bi bi-plus-lg me-1"></i> Add Objection
    </button>
  </div>

  <!-- Company Info (for non-super-admin) -->
  ${typeof tenant !== 'undefined' && tenant && !isSuperAdmin ? '<div class="alert alert-info mb-4"><i class="bi bi-building me-2"></i>Viewing data for: <strong>' + tenant.name + '</strong></div>' : ''}

  <!-- Filters (SUPER_ADMIN only) -->
  ${isSuperAdmin ? '<div class="card mb-4"><div class="card-body"><form method="GET" id="filterForm" class="row g-3"><input type="hidden" name="token" value="' + (token || '') + '"><div class="col-md-2"><label class="form-label">Industry</label><select name="industryId" id="industryFilter" class="form-select" onchange="onIndustryChange()"><option value="">All Industries</option></select></div><div class="col-md-3"><label class="form-label">Company</label><select name="companyId" id="companyFilter" class="form-select"><option value="">All Companies</option></select></div><div class="col-md-2"><label class="form-label">Category</label><select name="category" id="categoryFilter" class="form-select"><option value="">All Categories</option></select></div><div class="col-md-2"><label class="form-label">Frequency</label><select name="frequency" id="frequencyFilter" class="form-select"><option value="">All Frequencies</option></select></div><div class="col-md-3 d-flex align-items-end"><button type="submit" class="btn btn-primary me-2"><i class="bi bi-funnel me-1"></i> Filter</button><a href="' + basePath + '/admin/objections?token=' + (token || '') + '" class="btn btn-outline-secondary">Clear</a></div></form></div></div>' : ''}

  <!-- Objections List -->
  <div id="objectionsList"></div>

  <!-- Objection Handling Techniques Reference -->
  <div class="card mt-4">
    <div class="card-header bg-light">
      <h5 class="mb-0"><i class="bi bi-book me-2"></i>Objection Handling Techniques</h5>
    </div>
    <div class="card-body">
      <div class="row">
        <div class="col-md-4 mb-3">
          <h6>Feel-Felt-Found</h6>
          <p class="small text-muted mb-0">"I understand how you feel. Others felt the same. What they found was..."</p>
        </div>
        <div class="col-md-4 mb-3">
          <h6>Reframe</h6>
          <p class="small text-muted mb-0">Change the perspective. "That's actually why..." or "That's the best part..."</p>
        </div>
        <div class="col-md-4 mb-3">
          <h6>Isolate</h6>
          <p class="small text-muted mb-0">"If we could solve that, would you be ready to move forward?"</p>
        </div>
        <div class="col-md-4 mb-3">
          <h6>Question Back</h6>
          <p class="small text-muted mb-0">"Help me understand - what specifically concerns you about...?"</p>
        </div>
        <div class="col-md-4 mb-3">
          <h6>Value Stack</h6>
          <p class="small text-muted mb-0">Reframe cost by stacking all the value they receive.</p>
        </div>
        <div class="col-md-4 mb-3">
          <h6>Social Proof</h6>
          <p class="small text-muted mb-0">"Many of our customers initially thought the same, but found..."</p>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Add Objection Modal -->
<div class="modal fade" id="addObjectionModal" tabindex="-1">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"><i class="bi bi-plus-lg me-2"></i>Add Objection Handler</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <form id="addObjectionForm">
        <div class="modal-body">
          <div class="row g-3">
            <div class="col-12">
              <label class="form-label">Objection *</label>
              <input type="text" name="objection" class="form-control" required placeholder="What the customer says...">
            </div>
            <div class="col-md-6">
              <label class="form-label">Category</label>
              <select name="category" class="form-control">
                <option value="price">Price</option>
                <option value="need">Need</option>
                <option value="timing">Timing</option>
                <option value="authority">Authority</option>
                <option value="trust">Trust</option>
                <option value="competition">Competition</option>
              </select>
            </div>
            <div class="col-md-6">
              <label class="form-label">Frequency</label>
              <select name="frequency" class="form-control">
                <option value="very_common">Very Common</option>
                <option value="common" selected>Common</option>
                <option value="occasional">Occasional</option>
                <option value="rare">Rare</option>
              </select>
            </div>
            <div class="col-12">
              <label class="form-label">Response *</label>
              <textarea name="response" class="form-control" rows="3" required placeholder="How to respond..."></textarea>
            </div>
            <div class="col-md-6">
              <label class="form-label">Technique</label>
              <input type="text" name="technique" class="form-control" placeholder="e.g., Feel-Felt-Found">
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-primary"><i class="bi bi-check-lg me-1"></i> Create</button>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- Edit Objection Modal -->
<div class="modal fade" id="editObjectionModal" tabindex="-1">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"><i class="bi bi-pencil me-2"></i>Edit Objection Handler</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <form id="editObjectionForm">
        <input type="hidden" name="id" id="editObjectionId">
        <div class="modal-body">
          <div class="row g-3">
            <div class="col-12">
              <label class="form-label">Objection *</label>
              <input type="text" name="objection" id="editObjectionText" class="form-control" required>
            </div>
            <div class="col-md-6">
              <label class="form-label">Category</label>
              <select name="category" id="editCategory" class="form-control">
                <option value="price">Price</option>
                <option value="need">Need</option>
                <option value="timing">Timing</option>
                <option value="authority">Authority</option>
                <option value="trust">Trust</option>
                <option value="competition">Competition</option>
              </select>
            </div>
            <div class="col-md-6">
              <label class="form-label">Frequency</label>
              <select name="frequency" id="editFrequency" class="form-control">
                <option value="very_common">Very Common</option>
                <option value="common">Common</option>
                <option value="occasional">Occasional</option>
                <option value="rare">Rare</option>
              </select>
            </div>
            <div class="col-12">
              <label class="form-label">Response *</label>
              <textarea name="response" id="editResponse" class="form-control" rows="3" required></textarea>
            </div>
            <div class="col-md-6">
              <label class="form-label">Technique</label>
              <input type="text" name="technique" id="editTechnique" class="form-control">
            </div>
            <div class="col-md-6">
              <div class="form-check mt-4">
                <input type="checkbox" name="isActive" class="form-check-input" id="editIsActive">
                <label class="form-check-label" for="editIsActive">Active</label>
              </div>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-primary"><i class="bi bi-check-lg me-1"></i> Save</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script>
  const objections = ${JSON.stringify(objections)};
  const basePath = '${basePath}';
  const industries = ${JSON.stringify(industries)};
  const companies = ${JSON.stringify(companies)};
  const filters = ${JSON.stringify(filters)};
  const isSuperAdmin = ${isSuperAdmin};
  const categories = ${JSON.stringify(categories)};
  const frequencies = ${JSON.stringify(frequencies)};

  // Initialize filter dropdowns for SUPER_ADMIN
  function initFilters() {
    if (!isSuperAdmin) return;

    const industrySelect = document.getElementById('industryFilter');
    const companySelect = document.getElementById('companyFilter');
    const categorySelect = document.getElementById('categoryFilter');
    const frequencySelect = document.getElementById('frequencyFilter');

    // Populate industries
    industries.forEach(ind => {
      const opt = document.createElement('option');
      opt.value = ind.id;
      opt.textContent = ind.name;
      if (filters.industryId === ind.id) opt.selected = true;
      industrySelect.appendChild(opt);
    });

    // Populate companies
    updateCompanyDropdown();

    // Populate categories
    categories.forEach(cat => {
      const opt = document.createElement('option');
      opt.value = cat;
      opt.textContent = cat.charAt(0).toUpperCase() + cat.slice(1);
      if (filters.category === cat) opt.selected = true;
      categorySelect.appendChild(opt);
    });

    // Populate frequencies
    frequencies.forEach(freq => {
      const opt = document.createElement('option');
      opt.value = freq;
      opt.textContent = freq.replace('_', ' ').split(' ').map(w => w.charAt(0).toUpperCase() + w.slice(1)).join(' ');
      if (filters.frequency === freq) opt.selected = true;
      frequencySelect.appendChild(opt);
    });
  }

  function updateCompanyDropdown() {
    const industrySelect = document.getElementById('industryFilter');
    const companySelect = document.getElementById('companyFilter');
    const selectedIndustry = industrySelect ? industrySelect.value : '';

    companySelect.innerHTML = '<option value="">All Companies</option>';

    const filteredCompanies = selectedIndustry
      ? companies.filter(c => c.industryId === selectedIndustry)
      : companies;

    filteredCompanies.forEach(comp => {
      const opt = document.createElement('option');
      opt.value = comp.id;
      opt.textContent = comp.name + (comp.industry ? ' (' + comp.industry.name + ')' : '');
      if (filters.companyId === comp.id) opt.selected = true;
      companySelect.appendChild(opt);
    });
  }

  function onIndustryChange() {
    updateCompanyDropdown();
  }

  // Render objections grouped by category
  function renderObjections() {
    const container = document.getElementById('objectionsList');

    if (objections.length === 0) {
      container.innerHTML = '<div class="card"><div class="card-body text-center py-5 text-muted"><i class="bi bi-shield-exclamation fs-1 d-block mb-2"></i>No objection handlers found. Add your first objection to get started.</div></div>';
      return;
    }

    // Group by category
    const grouped = {};
    objections.forEach(obj => {
      const cat = obj.category || 'general';
      if (!grouped[cat]) grouped[cat] = [];
      grouped[cat].push(obj);
    });

    const icons = {
      price: 'currency-dollar',
      need: 'question-circle',
      timing: 'clock',
      authority: 'person-badge',
      trust: 'shield-check',
      competition: 'trophy',
      technology: 'cpu',
      budget: 'wallet2',
      scope: 'diagram-3',
      retail: 'shop',
      commitment: 'calendar-check',
      alternative: 'arrow-left-right',
      general: 'exclamation-triangle'
    };

    let html = '';
    for (const cat in grouped) {
      const catName = cat.charAt(0).toUpperCase() + cat.slice(1);
      const icon = icons[cat] || 'exclamation-triangle';

      html += '<div class="card mb-4">';
      html += '<div class="card-header obj-category-' + cat + '">';
      html += '<h5 class="mb-0"><i class="bi bi-' + icon + ' me-2"></i>' + catName + ' Objections</h5>';
      html += '</div>';
      html += '<div class="card-body">';

      grouped[cat].forEach(obj => {
        const freqBadge = obj.frequency === 'very_common' ? 'bg-danger' : obj.frequency === 'common' ? 'bg-warning text-dark' : 'bg-secondary';
        const freqText = obj.frequency ? obj.frequency.replace('_', ' ') : 'N/A';
        const statusBadge = obj.isActive ? 'bg-success' : 'bg-secondary';
        const statusText = obj.isActive ? 'Active' : 'Inactive';

        html += '<div class="objection-item">';
        html += '<div class="d-flex justify-content-between align-items-start">';
        html += '<div style="flex: 1;">';
        html += '<h6 class="objection-text">"' + obj.objection + '"</h6>';
        html += '<p class="mb-2"><strong>Response:</strong></p>';
        html += '<p class="text-muted mb-2">' + obj.response + '</p>';
        html += '<div class="d-flex gap-2 flex-wrap">';
        html += '<span class="badge bg-secondary">Technique: ' + (obj.technique || 'General') + '</span>';
        html += '<span class="badge ' + freqBadge + '">' + freqText + '</span>';
        html += '<span class="badge ' + statusBadge + '">' + statusText + '</span>';
        html += '</div>';
        html += '</div>';
        html += '<div class="ms-3">';
        html += '<button class="btn btn-sm btn-outline-secondary me-1" onclick="editObjection(\\'' + obj.id + '\\')" data-bs-toggle="tooltip" title="Edit"><i class="bi bi-pencil"></i></button>';
        html += '<button class="btn btn-sm btn-outline-danger" onclick="deleteObjection(\\'' + obj.id + '\\')" data-bs-toggle="tooltip" title="Delete"><i class="bi bi-trash"></i></button>';
        html += '</div>';
        html += '</div>';
        html += '</div>';
      });

      html += '</div></div>';
    }

    container.innerHTML = html;
    document.querySelectorAll('[data-bs-toggle="tooltip"]').forEach(el => new bootstrap.Tooltip(el));
  }

  function editObjection(id) {
    const obj = objections.find(o => o.id === id);
    if (!obj) return;

    document.getElementById('editObjectionId').value = obj.id;
    document.getElementById('editObjectionText').value = obj.objection || '';
    document.getElementById('editCategory').value = obj.category || 'price';
    document.getElementById('editFrequency').value = obj.frequency || 'common';
    document.getElementById('editResponse').value = obj.response || '';
    document.getElementById('editTechnique').value = obj.technique || '';
    document.getElementById('editIsActive').checked = obj.isActive;

    new bootstrap.Modal(document.getElementById('editObjectionModal')).show();
  }

  document.getElementById('addObjectionForm').addEventListener('submit', async (e) => {
    e.preventDefault();
    const data = Object.fromEntries(new FormData(e.target));
    try {
      const res = await fetch(basePath + '/admin/objections', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(data)
      });
      if (res.ok) location.reload();
      else alert((await res.json()).error || 'Failed to create objection handler');
    } catch (err) {
      alert('Error creating objection handler');
    }
  });

  document.getElementById('editObjectionForm').addEventListener('submit', async (e) => {
    e.preventDefault();
    const form = e.target;
    const id = document.getElementById('editObjectionId').value;
    const data = Object.fromEntries(new FormData(form));
    data.isActive = form.isActive.checked;

    try {
      const res = await fetch(basePath + '/admin/objections/' + id, {
        method: 'PUT',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(data)
      });
      if (res.ok) location.reload();
      else alert((await res.json()).error || 'Failed to update objection handler');
    } catch (err) {
      alert('Error updating objection handler');
    }
  });

  async function deleteObjection(id) {
    if (!confirm('Are you sure you want to delete this objection handler?')) return;
    try {
      const res = await fetch(basePath + '/admin/objections/' + id, { method: 'DELETE' });
      if (res.ok) location.reload();
      else alert((await res.json()).error || 'Failed to delete objection handler');
    } catch (err) {
      alert('Error deleting objection handler');
    }
  }

  // Initialize on load
  document.addEventListener('DOMContentLoaded', () => {
    initFilters();
    renderObjections();
  });
</script>

` }) %>
